<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrollment Details</title>
    <!-- <link rel="stylesheet" href="/styles.css"> -->
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
        }

        /* Main Content Styles */
        main {
            flex: 1;
            padding: 20px;
            max-width: 900px;
            margin: 20px auto;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            box-sizing: border-box;
            text-align: center;
        }

        h1 {
            font-size: 2.5em;
            color: #007bff;
            margin-bottom: 20px;
            text-align: center;
        }

        .enrollment-list {
            list-style-type: none;
            padding: 0;
            margin: 0;
            width: 100%;
        }

        .enrollment-item {
            background-color: #f9f9f9;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            text-align: left;
        }

        .enrollment-item h2 {
            font-size: 1.5em;
            color: #007bff;
            margin-bottom: 10px;
        }

        .enrollment-item p {
            font-size: 1.2em;
            margin: 5px 0;
        }

        .delete-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #dc3545;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.2s ease;
            margin-top: 10px;
        }

        .delete-btn:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

        .delete-btn:active {
            background-color: #bd2130;
        }

        .btn-back {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.2s ease;
            margin-top: 20px;
            text-align: center;
        }

        .btn-back:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .btn-back:active {
            background-color: #004494;
        }

        /* Center the message and button */
        .no-enrollments {
            text-align: center;
            font-size: 1.2em;
            margin-top: 50px;
        }

        /* Confirmation Dialog Styles */
        .confirmation-dialog {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            z-index: 1000;
            width: 80%;
            max-width: 400px;
            text-align: center;
        }

        .confirmation-dialog p {
            font-size: 1.2em;
            margin-bottom: 20px;
        }

        .dialog-buttons {
            display: flex;
            justify-content: space-around;
        }

        .confirm-btn {
            background-color: #dc3545;
            padding: 10px 20px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .confirm-btn:hover {
            background-color: #c82333;
        }

        .cancel-btn {
            background-color: #6c757d;
            padding: 10px 20px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .cancel-btn:hover {
            background-color: #5a6268;
        }

        .dialog-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }
    </style>
</head>

<body>
    <%- include('./common/header-other',{ isLoggedIn:isLoggedIn}) %>
        <main>

            <h1>Enrollment Details</h1>
            <% if (enrollments.length > 0) { %>
                <ul class="enrollment-list">
                    <% enrollments.forEach(enrollment => { %>
                        <li class="enrollment-item">
                            <h3><%= enrollment.Course.title %></h3>
                            <p><%= enrollment.Course.description %></p>
                            <p>Enrollment Date: <%= new Date(enrollment.enrolled_at).toLocaleDateString() %></p>
                            <button class="delete-btn" data-id="<%= enrollment.enrollment_id %>">Delete</button>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <div class="no-enrollments">
                    <p>No enrollments found.</p>
                    <a href="/" class="btn-back">Back to Courses</a>
                </div>
            <% } %>

        </main>

        <!-- Confirmation Dialog HTML -->
        <div class="confirmation-dialog" style="display: none;">
            <p>Are you sure you want to delete this enrollment? You will no longer have access to this course.</p>
            <div class="dialog-buttons">
                <button class="confirm-btn">Yes, Delete</button>
                <button class="cancel-btn">Cancel</button>
            </div>
        </div>
        <div class="dialog-overlay" style="display: none;"></div>
        <%- include('./common/footer-common') %>

        <script>
            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', (e) => {
                    const confirmationDialog = document.querySelector('.confirmation-dialog');
                    const dialogOverlay = document.querySelector('.dialog-overlay');
                    const confirmButton = document.querySelector('.confirm-btn');
                    const cancelButton = document.querySelector('.cancel-btn');

                    // Show the confirmation dialog
                    confirmationDialog.style.display = 'block';
                    dialogOverlay.style.display = 'block';

                    // Handle the confirmation click
                    confirmButton.onclick = async () => {
                        const enrollmentId = e.target.getAttribute('data-id');

                        try {
                            // Send the DELETE request to the server
                            const response = await fetch(`/course/enrollments/${enrollmentId}/delete`, {
                                method: 'DELETE',
                                headers: { 'Content-Type': 'application/json' }
                            });

                            const data = await response.json();

                            if (response.ok) {
                                // Reload the page to reflect the deleted enrollment
                                window.location.reload();
                            } else {
                                alert(data.message);
                            }
                        } catch (error) {
                            console.error('Error deleting enrollment:', error);
                            alert('An error occurred. Please try again later.');
                        }

                        // Hide the confirmation dialog
                        confirmationDialog.style.display = 'none';
                        dialogOverlay.style.display = 'none';
                    };

                    // Handle the cancel click
                    cancelButton.onclick = () => {
                        confirmationDialog.style.display = 'none';
                        dialogOverlay.style.display = 'none';
                    };
                });
            });
        </script>
</body>

</html>
