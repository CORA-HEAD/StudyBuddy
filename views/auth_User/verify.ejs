<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verification Page | StudyBuddy</title>
    <link rel="stylesheet" href="/styles/verify-styles.css">
    <style>
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            text-align: center;
            font-size: 16px;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .error {
            color: #ff0000;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
    <script>
        function validateOTPInput(event) {
            const key = event.key;
            if (!/^\d$/.test(key)) {
                event.preventDefault();
            }
        }

        function validateForm() {
            const otpInput = document.getElementById("otp").value;
            const otpError = document.getElementById("otp-error");

            // Check if OTP length is exactly 4 digits
            if (otpInput.length !== 4) {
                otpError.textContent = "OTP must be 4 digits long."; // Show error message in red below the input
                otpError.style.display = "block";
                return false;
            }
            // Clear any existing error message
            otpError.textContent = "";
            otpError.style.display = "none";
            return true;
        }

    </script>
</head>

<body>
    <%- include('../common/common_auth_header/header') %>
    <main>
        <div class="container">
            <div class="verification-box">
                <h2>Verification Page</h2>

                <% if (success_msg.length) { %>
                    <div class="alert alert-success">
                        <%= success_msg %>
                    </div>
                    <% } %>

                        <% if (error_msg.length) { %>
                            <div class="alert alert-danger">
                                <%= error_msg %>
                            </div>
                            <% } %>

                                <form action="/auth/verify" method="post" onsubmit="return validateForm()">
                                    <div class="input-group">
                                        <label for="otp">OTP:</label>
                                        <input type="text" id="otp" name="otp" placeholder="Enter OTP" required
                                            onkeypress="validateOTPInput(event)" maxlength="4">
                                        <div id="otp-error" class="error"></div> <!-- Error message span -->
                                    </div>
                                    <button type="submit">Verify</button>
                                </form>
            </div>
        </div>
    </main>
        <%- include('../common/footer-common') %>
</body>

</html>